    <script>
document.addEventListener('DOMContentLoaded', () => {
  const MIN_QTY = 12; // change if needed

  function updateQty() {
    const input = document.querySelector('.quantity__input');
    if (!input) return;

    input.min = MIN_QTY;
    input.value = MIN_QTY;
  }

  // run once on load
  updateQty();

  // watch for section re-render
  const observer = new MutationObserver(() => {
    updateQty();
  });

  observer.observe(document.body, {
    childList: true,
    subtree: true
  });
});
</script>

<div class="ui-contact-container">
  {% for block in section.blocks %}
    {% if block.type == 'ui-left-block' %}
      <div class="ui-content-left">
        <h1>{{ block.settings.ui_left_block_header }}</h1>

        {% if block.settings.ui_left_second_text %}
          <div class="ui_underline_red_line"></div>
        {% endif %}
        {% if block.settings.ui_left_block_rich != blank %}
          <div class="ui_big_text">
            {{ block.settings.ui_left_block_rich }}
          </div>
        {% endif %}
        <div class="ui-content-left_first">
          <ul>
            {%- for item in section.blocks -%}
              {%- if item.settings['ui-ul-text_li'] != blank -%}
                <li>{{ item.settings['ui-ul-text_li'] }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        <div class="ui-content-left_second">
          <div class="ui-content-left_third">
            {%- for block in section.blocks -%}
              {%- if block.type == 'ui-ul-text_left_redtext' and block.settings['ui-ul-text_left_redtext'] != blank -%}
                <a href="mailto:info@customizedwear.com" title="mailto:info@customizedwear.com">
                  {{- block.settings['ui-ul-text_left_redtext'] -}}
                </a>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div>
          {%- for block in section.blocks -%}
            {%- if block.type == 'ui-left_headertext' and block.settings['ui-ul-text_left_headertext'] != blank -%}
              <p>{{ block.settings['ui-ul-text_left_headertext'] }}</p>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
    {% if block.type == 'ui-right-block' %}
      <div class="ui-content-right">
        <h1>{{ block.settings.ui_right_block_header }}</h1>
        {% if block.settings.ui_right_second_text %}
          <div class="ui_underline_red_line"></div>
        {% endif %}
        {% if block.settings.ui_left_block__header_text %}
          {{ block.settings.ui_left_block__header_text }}
        {% endif %}
        {% if block.settings.ui_left_block__header_text != blank %}
          <div class="ui_big_text">
            {{ block.settings.ui_left_block__header_text }}
          </div>
        {% endif %}
        {% if block.settings['ui-right-block-rich'] != blank %}
          <div class="ui_big_text">
            {{ block.settings['ui-right-block-rich'] }}
          </div>
        {% endif %}
        <div class="ui_ul_top">
          <ul>
            {%- for item in section.blocks -%}
              {% if item.type == 'ui-ul-text_right' and item.settings['ui-ul-text_li_right'] != blank %}
                <li>{{ item.settings['ui-ul-text_li_right'] }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        <div class="ui_bottom_shipping">
          <div>
            <span>{% render 'capWholeico' %}</span>
          </div>
          <div>
            {%- for block in section.blocks -%}
              {%- if block.type == 'ui-right_headertext' and block.settings['ui-ul-text_right_headertext'] != blank -%}
                <p>{{ block.settings['ui-ul-text_right_headertext'] }}</p>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>


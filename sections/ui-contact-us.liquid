        {
          "type": "richtext",
          "id": "ui-ul-text_left_redtext",
          "label": "ui-ul-text_left_redtext"
        }
      ]
    },
    {
      "type": "ui-left_headertext",
      "name": "ui-left_headertext",
      "settings": [
        {
          "type": "text",
          "id": "ui-ul-text_left_headertext",
          "label": "ui-ul-text_left_headertext"
        }
      ]
    },
    {
      "type": "ui-right_headertext",
      "name": "ui-right_headertext",
      "settings": [
        {
          "type": "text",
          "id": "ui-ul-text_right_headertext",
          "label": "ui-ul-text_right_headertext"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "ui contact second",
      "settings": {}
    }
  ]
}
{% endschema %}

  "name": "ui contact second",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "ui-left-header-text",
      "label": "ui-left-header-text"
    }
  ],
  "blocks": [
    {
      "type": "ui-left-block",
      "name": "ui-left-block",
      "settings": [
        {
          "type": "text",
          "id": "ui_left_block_header",
          "label": "ui-left-block-header"
        },
        {
          "type": "checkbox",
          "id": "ui_left_second_text",
          "label": "ui-left-second-text",
          "default": true
        },
        {
          "type": "richtext",
          "id": "ui_left_block_rich",
          "label": "ui-left-block-rich"
        }
      ]
    },
    {
      "type": "ui-right-block",
      "name": "ui-right-block",
      "settings": [
        {
          "type": "text",
          "id": "ui_left_block__header_text",
          "label": "ui_left_block__header_text"
        },
        {
          "type": "text",
          "id": "ui_right_block_header",
          "label": "ui-right-block-header"
        },
        {
          "type": "checkbox",
          "id": "ui_right_second_text",
          "label": "ui-right-second-text"
        },
        {
          "type": "richtext",
          "id": "ui-right-block-rich",
          "label": "ui-right-block-rich"
        }
      ]
    },
    {
      "type": "ui-ul-text",
      "name": "ui-ul-text",
      "settings": [
        {
          "type": "text",
          "id": "ui-ul-text_li",
          "label": "ui-ul-text_li"
        }
      ]
    },
    {
      "type": "ui-ul-text_right",
      "name": "ui-ul-text_right",
      "settings": [
        {
          "type": "text",
          "id": "ui-ul-text_li_right",
          "label": "ui-ul-text_li_right"
